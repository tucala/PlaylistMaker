<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/setting"
    xmlns:app="http://schemas.android.com/apk/res-auto">

     <ImageView
         android:id="@+id/btnBack"
         android:layout_width="@dimen/buttonText"
         android:layout_height="@dimen/buttonText"
         android:importantForAccessibility="no"
         android:src="@drawable/ic_back"
         android:layout_marginStart="16dp"
         android:layout_marginTop="14dp"
         app:tint="@color/black"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toBottomOf="@+id/text"
         app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textSize="@dimen/buttonText"
        android:textColor="@color/black"
        android:gravity="start|top"
        android:layout_marginStart="28dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnBack"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spaceText"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/text"
        >


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/themeSwitch"
                android:textColor="@color/black"
                android:textSize="@dimen/settingText"
                android:backgroundTint="@color/white"
                android:gravity="start|center_vertical"
                android:clickable="false" />

            <Switch
                android:id="@+id/switchDarkMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="12dp"
                android:checked="false" />
        </FrameLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/shareApp"
            android:textColor="@color/black"
            android:textSize="@dimen/settingText"
            android:backgroundTint="@color/white"
            android:drawableEnd="@drawable/ic_share"
            android:drawablePadding="12dp"
            android:gravity="start|center_vertical"
            android:drawableTint="@color/black"
            android:foreground="?android:attr/selectableItemBackground"
            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/support"
            android:textColor="@color/black"
            android:textSize="@dimen/settingText"
            android:backgroundTint="@color/white"
            android:drawableEnd="@drawable/ic_support"
            android:drawablePadding="12dp"
            android:gravity="start|center_vertical"
            android:drawableTint="@color/black"
            android:foreground="?android:attr/selectableItemBackground"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/userAccept"
            android:textColor="@color/black"
            android:textSize="@dimen/settingText"
            android:backgroundTint="@color/white"
            android:drawableEnd="@drawable/ic_next"
            android:drawablePadding="12dp"
            android:gravity="start|center_vertical"
            android:drawableTint="@color/black"
            android:foreground="?android:attr/selectableItemBackground"
            />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>