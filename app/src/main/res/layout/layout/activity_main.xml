<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/YP_Blue"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/buttonText"
        android:text="@string/app_name"
        android:gravity="start|top"
        android:padding="@dimen/allign"
        android:layout_marginTop="14dp"
        android:layout_marginStart="@dimen/allign"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="@dimen/bottomMargin"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-51dp">


        <Button
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/allign"
            android:layout_marginEnd="@dimen/allign"
            android:layout_marginBottom="@dimen/allign"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/search"
            android:textColor="@color/black"
            android:textSize="@dimen/buttonText"
            app:cornerRadius="@dimen/buttonRadius"
            app:icon="@drawable/ic_search"
            app:iconGravity="textStart"
            app:iconTint="@color/black" />

        <Button
            android:id="@+id/library"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/allign"
            android:layout_marginEnd="@dimen/allign"
            android:layout_marginBottom="@dimen/allign"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/library"
            android:textColor="@color/black"
            android:textSize="@dimen/buttonText"
            app:cornerRadius="@dimen/buttonRadius"
            app:icon="@drawable/ic_media"
            app:iconGravity="textStart"
            app:iconTint="@color/black" />

        <Button
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/allign"
            android:layout_marginEnd="@dimen/allign"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/settings"
            android:textColor="@color/black"
            android:textSize="@dimen/buttonText"
            app:cornerRadius="@dimen/buttonRadius"
            app:icon="@drawable/ic_settings"
            app:iconGravity="textStart"
            app:iconTint="@color/black" />

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</androidx.constraintlayout.widget.ConstraintLayout>