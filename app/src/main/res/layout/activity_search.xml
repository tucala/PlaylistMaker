<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity"
    android:background="?attr/background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarTop"
        style="@style/tnSwitch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/downToolbar"
        android:textSize="@dimen/buttonText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:title="@string/search"
        app:titleMarginStart="12dp"
        app:titleTextAppearance="@style/ToolbarTitleAppearance" />

    <EditText
        android:id="@+id/editTextSearch"
        style="@style/searchBackground"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginStart="@dimen/allign"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/allign"
        android:background="@drawable/edit_text_background"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="8dp"
        android:fontFamily="@font/ys_display_regular"
        android:hint="@string/search"
        android:paddingStart="@dimen/allign"
        android:paddingEnd="12dp"
        android:textColor="@color/black"
        android:textSize="@dimen/settingText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarTop"
        app:layout_constraintWidth_percent="0.9"
        android:inputType="text" />

</androidx.constraintlayout.widget.ConstraintLayout>