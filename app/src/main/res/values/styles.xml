<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">@dimen/buttonRadius</item>
        <item name="android:textSize">@dimen/buttonText</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:layout_marginStart">@dimen/allign</item>
        <item name="android:layout_marginEnd">@dimen/allign</item>
        <item name="android:layout_marginBottom">@dimen/allign</item>
        <item name="android:layout_height">@dimen/lHeight</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="settingsPunkt">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/settingText</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:drawableTint">@color/YP_Gray</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="tnSwitch">
        <item name="titleTextColor">@color/black</item>
        <item name="navigationIconTint">@color/black</item>
    </style>

    <style name="ToolbarTitleAppearance">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/buttonText</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="mainBack">
        <item name="android:background">@color/YP_Blue</item>
    </style>

    <style name="searchBackground">
        <item name="android:background">@color/white</item>
        <item name="android:textColorHint">@color/searchIcon</item>
        <item name="android:drawableTint">@color/searchIcon</item>
    </style>

    <style name="trackNameSearch">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:text">@string/testString</item>
        <item name="android:textSize">@dimen/trackName</item>
    </style>
    <style name="artistNameSearch">
        <item name="android:textColor">@color/YP_Text_Gray</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:text">@string/testString</item>
        <item name="android:textSize">@dimen/artistName</item>
    </style>

</resources>